<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs title="Search supported applications"
        height="100">
        <Require feature="dynamic-height"/>
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
            <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
            <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
            <link href="https://fonts.googleapis.com/css?family=Crimson+Text:600,700|PT+Sans:400,700" rel="stylesheet">
            <script>

            function init(){
                var urlApp = (window.location != window.parent.location)
                        ? document.referrer
                        : document.location.href;

                var url = "https://spreadsheets.google.com/feeds/list/1wsybm0u3HvELqq0c7gjYWXmJUnJVm3W45q3G-eoX8bs/7/public/basic?alt=json";
                
                $.ajax({
                    url:url,
                    async: false,
                    dataType:"jsonp",
                    success:function(data) {
                        createObj(data.feed.entry);
                    },
                });

                var arrayToShow = [];

                function createObj(dataEntry){
                    var availableApps = [];
                    var availableCapability = [];
                    dataEntry.forEach(function(response){
                        var returnObj = {};
                        response = response['content']['$t'].split(", ");

                        response.forEach(function(el){
                            var elArry = el.split(": ");
                            returnObj[elArry[0]] = elArry[1];
                        });
                        availableApps.push(returnObj['applicationname']);
                        availableCapability.indexOf(returnObj['capability']) == -1 ? availableCapability.push(returnObj['capability']):'';
                        arrayToShow.push(returnObj);
                    })

                    buildHTLM(arrayToShow);
                    createAutocomplite(availableApps);
                    createCapabilityFilter(availableCapability);
                };
                gadgets.window.adjustHeight();
            }

            function createCapabilityFilter(availableCapability){
                availableCapability.forEach(function(el){
                    $("#capabilitySearch").append("<option value='" + el + "'>" + el + "</option>")
                });
                $('#capabilitySearch').select2();
            }

            function createAutocomplite(availableApps){
                $("#search_input").autocomplete({
                    source: availableApps,
                    open: function(){
                        $("#search_input").addClass("openAuto");
                    },
                    close: function(){
                        $("#search_input").removeClass("openAuto");
                    }
                });
            }
            
            function buildHTLM(apps){
                var $wrapper = $('.search__wrapper_inner');
                apps.forEach(function(app){
                    $wrapper.append("<a target='_parent' href='https://sites.google.com/a/roche.com/user-productivity-tools/supported-applications/" + app.url + "' class='application_item'> \
                        <div class='application_item_information'> \
                            <h4>" + app.applicationname + "</h4> \
                            <p>" + app.capability + "</p> \
                        </div> \
                        <div class='application_item_description'>" + app.description + "</div> \
                        <div class='application_item_read'>Read more</div></a>");
                });
                gadgets.window.adjustHeight();
            }

            function handlerError(isEmpty){
                isEmpty ? $(".search_error").css('display', ''):$(".search_error").css('display', 'none');
            }

            function searchApps(){
                var searchInput = $("#search_input");

                var selectedCapability = $("#capabilitySearch").val();
                var searchValue = searchInput.val().toUpperCase();
                
                var isEmpty = true;

                $(".application_item").each(function(index, el){
                    if(($(el).find(".application_item_information h4").html().toUpperCase().indexOf(searchValue) != -1 || $(el).find(".application_item_description").html().toUpperCase().indexOf(searchValue) != -1)){
                        if(selectedCapability == "All application capabilities" || $(el).find(".application_item_information p").html() == selectedCapability){
                            $(el).css("display", "");    
                            isEmpty = false;
                        }
                        else{
                            $(el).css("display", "none");
                        }
                    }
                    else{
                        $(el).css("display", "none");
                    }
                });
                handlerError(isEmpty);
                gadgets.window.adjustHeight();
            }

            window.addEventListener('DOMContentLoaded', init)
            </script>
            <style>
                .ui-widget.ui-widget-content{
                     border: 0;
                }
                .ui-widget-content{
                    border-top: 1px solid #dddddd !important;
                    background: #ffffff;
                    color: #333333;
                    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.15);
                    border-radius: 0 0 6px 6px;
                    overflow: hidden;
                }
                .ui-menu .ui-menu-item{
                    height: 40px;
                }
                .ui-menu .ui-menu-item-wrapper {
                    position: relative;
                    padding: 11px 1em 3px .4em;
                    height: 100%;
                    box-sizing: border-box;
                }
                #search_input.openAuto{
                    border-radius: 6px 6px 0 0;
                }
                .search__wrapper{
                    margin: 0 5px;
                }
                .search__wrapper h2{
                    font-family: Minion, 'Crimson Text', sans-serif;
                    font-size: 30px;
                    font-weight: bold;
                    font-style: italic;
                    font-stretch: normal;
                    line-height: normal;
                    letter-spacing: 0.6px;
                    color: #000000;
                    margin-top: 18px;
                }
                a.application_item{
                    display: block;
                    height: 110px;
                    border-radius: 6px;
                    background-color: #ffffff;
                    box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.15);
                    width: 100%;
                    text-decoration: none;
                    margin-bottom: 15px;
                    position: relative;
                    top: 0;
                    transition: .2s;
                }
                a.application_item:hover{
                    top: -5px;
                    box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.15), 0 10px 6px 0 rgba(0, 0, 0, 0.09), 0 1px 6px 0 rgba(0, 0, 0, 0.15);
                }
                .application_item_information{
                    display: inline-block;
                    padding-top: 27px;
                    box-sizing: border-box;
                    width: 380px;
                    padding-left: 33px;
                }
                .application_item_information h4{
                    margin: 0;
                    font-family: Imago, 'PT Sans', sans-serif;
                    font-size: 25px;
                    font-weight: 600;
                    font-style: normal;
                    font-stretch: normal;
                    line-height: normal;
                    letter-spacing: 0.5px;
                    margin-bottom: 3px;
                    color: #3e78bd;
                }
                .application_item_information p{
                    margin: 0;
                    font-family: Imago, 'PT Sans', sans-serif;
                    font-size: 18px;
                    font-weight: normal;
                    font-style: normal;
                    font-stretch: normal;
                    line-height: normal;
                    letter-spacing: 0.4px;
                    color: #000000;
                }
                .application_item_description{
                    display: inline-block;
                    vertical-align: top;
                    font-family: Imago, 'PT Sans', sans-serif;
                    font-size: 18px;
                    font-weight: normal;
                    font-style: normal;
                    font-stretch: normal;
                    line-height: normal;
                    letter-spacing: 0.4px;
                    color: #000000;
                    box-sizing: border-box;
                    padding-top: 42px;
                    padding-left: 42px;
                    width: 666px;
                }
                .application_item_read{
                    display: inline-block;
                    vertical-align: top;
                    position: relative;
                    font-family: Imago, 'PT Sans', sans-serif;
                    font-size: 18px;
                    font-weight: 600;
                    font-style: normal;
                    font-stretch: normal;
                    line-height: normal;
                    letter-spacing: 0.4px;
                    color: #3e78bd;
                    box-sizing: border-box;
                    padding-top: 42px;
                    padding-right: 33px;
                    padding-left: 32px;
                }
                .application_item_read:before{
                    content: "";
                    display: block;
                    position: absolute;
                    right: 0;
                    bottom: 2px;
                    width: 22px;
                    height: 18px;
                    background: url(https://sites.google.com/a/roche.com/user-productivity-tools/arrow-more.png) no-repeat center;
                    background-size: cover;
                    transition: .2s;
                }
                a.application_item:hover .application_item_read:before{
                    right: -5px;
                }
                .search__wrapper_func{
                    height: 90px;
                    border-radius: 6px;
                    background-color: #ebebeb;
                    box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.15);
                    box-sizing: border-box;
                    padding-top: 15px;
                    margin-bottom: 21px;
                    padding-left: 16px;
                }
                #search_input{
                    width: 800px;
                    height: 60px;
                    border-radius: 6px;
                    background: url(https://sites.google.com/a/roche.com/user-productivity-tools/search.png) no-repeat 20px center #ffffff;
                    box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.15);
                    border: 0;
                    outline: 0;    
                    padding-left: 59px;
                    font-family: Imago;
                    font-size: 20px;
                    font-weight: normal;
                    font-style: normal;
                    font-stretch: normal;
                    line-height: normal;
                    letter-spacing: 0.4px;
                    color: #000000;
                    margin-right: 14px;
                }
                ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
                    color: #000000;
                    opacity: 1; /* Firefox */
                }
                :-ms-input-placeholder { /* Internet Explorer 10-11 */
                    color: #000000;
                }
                ::-ms-input-placeholder { /* Microsoft Edge */
                    color: #000000;
                }
                .select2-container {
                    box-sizing: border-box;
                    display: inline-block;
                    margin: 0;
                    position: relative;
                    vertical-align: middle;
                    width: 397px !important;
                    height: 60px;
                    border-radius: 6px;
                    background-color: #ffffff;
                    box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.15);
                    margin-top: -4px;
                }
                .select2-container .select2-selection--single {
                    box-sizing: border-box;
                    cursor: pointer;
                    display: block;
                    height: 60px;
                    user-select: none;
                    -webkit-user-select: none;
                    border: 0 !important;
                }
                .select2-container--default .select2-selection--single .select2-selection__rendered {
                    line-height: 60px;
                    font-family: Imago;
                    padding-left: 20px;
                    font-size: 20px;
                    font-weight: normal;
                    font-style: normal;
                    font-stretch: normal;
                    letter-spacing: 0.4px;
                    color: #000000;
                }
                .select2-container--default .select2-selection--single .select2-selection__arrow {
                    height: 26px;
                    position: absolute;
                    top: 17px;
                    right: 1px;
                    width: 20px;
                }
                .select2-container--open .select2-dropdown--below {
                    border-top: none;
                    border-top-left-radius: 0;
                    border-top-right-radius: 0;
                    border-radius: 0 0 6px 6px;
                    background-color: #ffffff;
                    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.15);
                    border: 0;
                    border-top: 1px solid #ccc;
                }
                .hiddeCapability{
                    display: none !important;
                }
                .search_error{
                    height: 110px;
                    border-radius: 6px;
                    background-color: #d21111;
                    box-shadow: 0 2px 8px 0 rgba(189, 0, 0, 0.45);
                    width: 100%;
                    text-decoration: none;
                    margin-bottom: 46px;
                    text-align: center;
                    line-height: 110px;
                    font-family: Imago;
                    font-size: 20px;
                    font-weight: 600;
                    font-style: normal;
                    font-stretch: normal;
                    letter-spacing: 0.4px;
                    color: #ffffff;
                    margin-top: 60px;
                }
                .select2-container--default .select2-selection--single .select2-selection__arrow {
                    height: 26px;
                    position: absolute;
                    top: 10px;
                    right: 25px;
                    width: 20px;
                }
                .select2-container--default .select2-selection--single .select2-selection__arrow b{
                    border-color: 0;
                    border-style: none;
                    border-width: 0;
                    height: 12px;
                    left: 0;
                    margin-left: 0;
                    margin-top: 0;
                    position: absolute;
                    top: 50%;
                    width: 24px;
                    background: url(https://sites.google.com/a/roche.com/user-productivity-tools/arrow-down.png);
                    background-size: contain;
                    transition: .3s;
                }
                .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b {
                    transform: rotate(180deg);
                }
            </style>
            <div class="search__wrapper">
                <h2>Supported application</h2>
                
                <div class="search__wrapper_func">
                    <input type="text" name="search_input" id="search_input" placeholder="Search for application" onkeyup="searchApps()">
                    <select name="capabilitySearch" id="capabilitySearch" onchange="searchApps()">
                        <option value="All application capabilities">All application capabilities</option>
                    </select>
                </div>

                <div class="search__wrapper_inner">
                    <div class="search_error" style="display: none;">
                        Not found data
                    </div>
                </div>
            </div>
        ]]>
    </Content>
</Module>